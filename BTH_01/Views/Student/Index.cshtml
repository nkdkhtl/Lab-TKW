
@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>Hệ ĐT</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBirth</td>
                @{
                    string str = "";
                    switch (s.Branch)
                    {
                        case Branch.IT:
                            str = "Công nghệ thông tin";
                            break;
                        case Branch.CE:
                            str = "Công trình";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
            </tr>
        }
    </tbody>
</table>