@model InClass08.Models.TvcSanPham

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label asp-for="tvcMaSanPham" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-upc-scan"></i></span>
                                        <input asp-for="tvcMaSanPham" class="form-control bg-light" readonly disabled />
                                        <input type="hidden" name="tvcMaSanPham" value="@Model.tvcMaSanPham" />
                                    </div>
                                    <span asp-validation-for="tvcMaSanPham" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label asp-for="tvcTenSanPham" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                        <input asp-for="tvcTenSanPham" class="form-control" />
                                    </div>
                                    <span asp-validation-for="tvcTenSanPham" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tvcHinhAnh" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-image"></i></span>
                                <input asp-for="tvcHinhAnh" class="form-control" />
                            </div>
                            <span asp-validation-for="tvcHinhAnh" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label asp-for="tvcSoLuong" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-123"></i></span>
                                        <input asp-for="tvcSoLuong" class="form-control" />
                                    </div>
                                    <span asp-validation-for="tvcSoLuong" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label asp-for="tvcDonGia" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                        <input asp-for="tvcDonGia" class="form-control" />
                                    </div>
                                    <span asp-validation-for="tvcDonGia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tvcLoaiSanPhamId" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-folder"></i></span>
                                <select asp-for="tvcLoaiSanPhamId" class="form-select" asp-items="ViewBag.tvcLoaiSanPhamId"></select>
                            </div>
                            <span asp-validation-for="tvcLoaiSanPhamId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#editForm').on('submit', function() {
                var btn = $(this).find('button[type="submit"]');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Saving...');
            });
        });
    </script>
}
