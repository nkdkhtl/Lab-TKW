@model InClass08.Models.TvcSanPham

@{
    ViewData["Title"] = "Create Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Create Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="tvcMaSanPham" class="form-label fw-bold"></label>
                                <input asp-for="tvcMaSanPham" class="form-control" />
                                <span asp-validation-for="tvcMaSanPham" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="tvcTenSanPham" class="form-label fw-bold"></label>
                                <input asp-for="tvcTenSanPham" class="form-control" />
                                <span asp-validation-for="tvcTenSanPham" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tvcHinhAnh" class="form-label fw-bold"></label>
                            <input asp-for="tvcHinhAnh" class="form-control" />
                            <span asp-validation-for="tvcHinhAnh" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="tvcSoLuong" class="form-label fw-bold"></label>
                                <input asp-for="tvcSoLuong" class="form-control" />
                                <span asp-validation-for="tvcSoLuong" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="tvcDonGia" class="form-label fw-bold"></label>
                                <input asp-for="tvcDonGia" class="form-control" />
                                <span asp-validation-for="tvcDonGia" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="tvcLoaiSanPhamId" class="form-label fw-bold"></label>
                            <select asp-for="tvcLoaiSanPhamId" class="form-select" asp-items="ViewBag.tvcLoaiSanPhamId"></select>
                            <span asp-validation-for="tvcLoaiSanPhamId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
