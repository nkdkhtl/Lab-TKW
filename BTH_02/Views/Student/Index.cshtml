
@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<style>
    tr {
        height: 80px;
    }
    td {
        height100%;
        text-align: center;
        vertical-align: middle;
    }
</style>
<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create Student</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>Hệ ĐT</th>
            <th>Email</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(s.PhotoPath))
                    {
                        <img src="@s.PhotoPath" width="80" height="80" style="object-fit:cover;" />
                    }
                </td>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBirth</td>
                @{
                    string str = "";
                    switch (s.Branch)
                    {
                        case Branch.IT:
                            str = "Công nghệ thông tin";
                            break;
                        case Branch.CE:
                            str = "Công trình";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
                <td>@(s.Gender==Gender.Male? "Nam":"Nữ")</td>
                <td>@(s.IsRegular?"Chính quy": "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        var table =document.querySelector("table");
        table.onclick = () => {
            table.style.backgroundColor = "yellow";
        }
    </script>
}
