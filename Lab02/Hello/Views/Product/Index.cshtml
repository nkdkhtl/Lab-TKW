@using Hello.Models
@model Category

@{
    ViewData["Title"] = "Danh sách sản phẩm theo loại";
}

<h2 class="text-2xl font-bold mb-4">Products in : @Model.Name</h2>

<table class="min-w-full border border-gray-300 rounded-lg shadow">
    <thead>
        <tr class="bg-gray-100">
            <th class="px-4 py-2 border">ID</th>
            <th class="px-4 py-2 border">Name</th>
            <th class="px-4 py-2 border">Price</th>
            <th class="px-4 py-2 border">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 border">@p.Id</td>
                <td class="px-4 py-2 border">@p.Name</td>
                <td class="px-4 py-2 border">@p.Price $</td>
                <td class="px-4 py-2 border">@p.CategoryName</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="text-blue-600 hover:underline">Return to category</a>
