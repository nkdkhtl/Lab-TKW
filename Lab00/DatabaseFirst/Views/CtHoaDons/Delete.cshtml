@model DatabaseFirst.Models.CtHoaDon
@{
    ViewData["Title"] = "Delete CT Hoa Don";
}
<h1>Delete CT Hoa Don</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.HoaDon?.MaHoaDon - @Model.SanPham?.TenSanPham</h4>
