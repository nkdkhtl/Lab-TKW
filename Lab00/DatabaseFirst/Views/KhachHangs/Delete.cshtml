@model DatabaseFirst.Models.KhachHang
@{
    ViewData["Title"] = "Delete KhachHang";
}
<h1>Delete KhachHang</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.MaKhachHang - @Model.HoTenKhachHang</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">DienThoai</dt>
        <dd class="col-sm-10">@Model.DienThoai</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>